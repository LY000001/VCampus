<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
 
<mapper namespace="tech.zxuuu.dao.IOpenCourseMapper">

	<select id="getOpenCourseList" resultType="tech.zxuuu.entity.OpenCourseInfo">
		SELECT 
			`Id`				as "id",
			`CourseName`		as "courseName",
			`Speaker`			as "speaker",
			`Preview` 			as "preview"
			FROM `tb_opencourse`
	</select>
	
	<select id="getEmoticon" parameterType="String" resultType="String">
	    SELECT `URL` FROM tb_emoticon WHERE `Name`=#{emoName}
	</select>
	
	<select id="getEmoticon" resultType="String">
	    SELECT * FROM tb_emoticon
	</select>
    
</mapper>
